<UserControl x:Class="DopravniPodnik.Views.JizdyView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:DopravniPodnik.Views"
        mc:Ignorable="d">
    <Grid>
        <DataGrid ItemsSource="{Binding Jizdy}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Začátek" Binding="{Binding Path=Zacatek}"/>
                <DataGridTextColumn Header="Konec" Binding="{Binding Path=Konec}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
